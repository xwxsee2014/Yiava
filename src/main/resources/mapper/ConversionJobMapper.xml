<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiava.mapper.ConversionJobMapper">

    <!-- Result map for ConversionJob entity -->
    <resultMap id="ConversionJobResultMap" type="com.yiava.entity.ConversionJob">
        <id property="id" column="id"/>
        <result property="documentId" column="document_id"/>
        <result property="status" column="status"/>
        <result property="progressPercentage" column="progress_percentage"/>
        <result property="currentPage" column="current_page"/>
        <result property="totalPages" column="total_pages"/>
        <result property="startedAt" column="started_at" jdbcType="TIMESTAMP"/>
        <result property="completedAt" column="completed_at" jdbcType="TIMESTAMP"/>
        <result property="errorMessage" column="error_message"/>
    </resultMap>

    <!-- Get all jobs with document information -->
    <select id="selectAllWithDocument" resultMap="ConversionJobResultMap">
        SELECT cj.*, d.original_filename, d.file_extension
        FROM conversion_job cj
        JOIN document d ON cj.document_id = d.id
        <where>
            <if test="status != null">
                AND cj.status = #{status}
            </if>
        </where>
        ORDER BY cj.started_at DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

</mapper>
